# .env.example
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=1500

# Application Configuration
APP_DEBUG=False
LOG_LEVEL=INFO

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1

# Optional: UpToDate API (for future integration)
UPTODATE_API_KEY=your_uptodate_api_key_here
UPTODATE_API_URL=https://api.uptodate.com

# Database Configuration (for future use)
DATABASE_URL=sqlite:///medical_diagnosis.db

# Feature Flags
ENABLE_PDF_REPORTS=True
ENABLE_SYNTHETIC_CASES=True
ENABLE_DISCUSSION_SIMULATION=True
ENABLE_API_LOGGING=True
